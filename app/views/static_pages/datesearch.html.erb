<h1>Find Pictures By Date Taken</h1>


<%= form_tag('/datesearch', method: :get) do %>
  <%= label_tag 'Search By Date Taken' %>
  <br>
  <%= date_field_tag :datesearch %>
  <%= submit_tag 'Search for Photos' %>
<% end %>

<% if params[:datesearch] %>
	<%= @date_chosen %>
	<%= @max_date %>
	<p> This is the date chosen </p>
<% end %>	


<% if params[:datesearch] %>
	 
	
	<h1>Pictures Taken on <%= @date_chosen %> </h1>



		<% @photos.each do |photo| %>
			<% info = flickr.photos.getInfo(:photo_id => photo.id) %>
			<%= link_to image_tag(FlickRaw.url_m(info)), FlickRaw.url_b(info) %>	
		<% end  %>

		
	
<% end %>	